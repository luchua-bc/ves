search sock {

  document sock inherits product {

    field size type int {
      indexing: index | summary | attribute
    }

    field color type string {
      indexing: summary
      index: prefix
    }

    field brand type string {
      indexing: summary
    }

  }

  rank-profile other {
    second-phase {
      expression: fieldMatch(color).fieldCompleteness + fieldMatch(brand).proximity
    }
  }

}
