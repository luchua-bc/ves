search ngram {

  document ngram {

    field gram_1 type string {
      indexing: index | summary
      summary: dynamic
      match {
        gram
        gram-size:1
      }
    }

    field gram_2 type string {
      indexing: attribute | index # index take precedence for matching
      match: gram     # gram-size 2 is default
    }

    field gram_3 type string {
      indexing: index
      match {
        gram
        gram-size: 3
      }
    }

  }

}
