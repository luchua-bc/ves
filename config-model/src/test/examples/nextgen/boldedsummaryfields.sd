search boldedsummaryfields {
    document boldedsummaryfields {
        field foo type string {
            indexing: index | summary
            summary bar {
                source: foo
                bolding: on
            }
        }
        field baz type string {
            indexing: attribute | summary
            summary cox {
                source: baz
                bolding: on
            }
        }
    }
}
